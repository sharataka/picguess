<div class = "container">

<h1>New Location</h1>

<%= form_for [@location] do |f| %>
  <p>
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </p>
 
  <p>
    <%= f.label :lat %><br>
    <%= f.text_field :lat %>
  </p>
 
  <p>
    <%= f.label :long %><br>
    <%= f.text_field :long %>
  </p>

  <p>
    <%= f.label :answer %><br>
    <%= f.text_field :answer %>
  </p>

  <p>
    <%= f.label :hint %><br>
    <%= f.text_area :hint %>
  </p>

  <p>
    <%= f.label :imagelink %><br>
    <%= f.text_field :imagelink %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>